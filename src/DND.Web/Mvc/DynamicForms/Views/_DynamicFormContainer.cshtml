@model DynamicFormContainer
<div class="row">
    <div class="col-12 mb-2">
        @await Html.PartialAsync("_DynamicFormHorizontalNavigation", Model.Navigation)
    </div>
</div>

<div class="row">
    <div class="col-sm-3 col-lg-2 d-none d-sm-block">
        <div class="sticky-top">
            <div class="card">
                <div class="card-body">
                    @await Html.PartialAsync("_DynamicFormVerticalNavigation", Model.Navigation)
                </div>
            </div>
        </div>
    </div>
    <div class="col-sm-9 col-lg-10">
        <div class="card">
            <div class="card-body">
                @await Html.PartialAsync("_DynamicFormEdit", Model.Forms)
            </div>
        </div>
    </div>
</div>

<script type="text/javascript" language=javascript>
    $.validator.unobtrusive.parse(document);
</script>
