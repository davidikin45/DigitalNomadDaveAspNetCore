@using DND.Domain.Enums
@model DND.Core.Enums.DestinationType
@{
    var options = Enum.GetValues(typeof(DestinationType))
    .Cast<DestinationType>()
    .Select(t => new SelectListItem
    {
        Text = t.EnumDisplayName(),
        Value = t.ToString(),
        Selected = t == Model
    })
    .ToArray();

}

@Html.DropDownList("", options, new { @class = "form-control" })
