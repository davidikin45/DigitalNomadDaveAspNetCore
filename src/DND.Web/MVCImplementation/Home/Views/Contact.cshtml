@model ContactViewModel
@{
    ViewBag.PageTitle = "Contact Me";
    ViewBag.Description = "Contact Me";
    ViewBag.Blog = true;
}

@await Component.InvokeAsync(nameof(ContentHTMLViewComponent).Replace("ViewComponent",""), new { id = DND.Common.Constants.CMS.ContentHtml.Contact })
<br />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    //Only displays Model level validation
    @Html.ValidationSummary(true)
    @Html.EditorForModel()
    <div class="form-group row">
        <div class="offset-md-2 col-md-10">
            <input id="Submit" type="submit" value="Submit" class="btn btn-primary" />
        </div>
    </div>
}