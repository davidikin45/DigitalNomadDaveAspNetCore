@model BlogPostListViewModel

@{
    ViewBag.Blog = true;
}

@if (Model.Posts.Count > 0)
{
    foreach (var post in Model.Posts)
    {
        @Html.Partial("_BlogPostTemplate", post)
        <br />
        <hr />
    }
}
else
{
    <p>No posts found!</p>
}

