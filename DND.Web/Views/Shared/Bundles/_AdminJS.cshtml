<environment include="Development">
    @foreach (string script in Html.BundleConfig().Bundle("wwwroot/js/site.admin.min.js").inputFiles)
    {
        <script src="@script.Replace("wwwroot","~")" asp-append-version="true"></script>
    }
</environment>
<environment exclude="Development">
    <script src="~/js/site.admin.min.js" asp-append-version="true"></script>
</environment>