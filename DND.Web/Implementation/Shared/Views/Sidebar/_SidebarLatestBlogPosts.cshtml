@model IList<BlogPostDto>

<div class="sidebar-module">
    <h3>Latest Blog Posts</h3>

    @if (Model.Count > 0)
    {
        <ul>
            @foreach (var post in Model)
            {
              
                <li>@(Html.ActionLink<BlogController>(c => c.Post(post.DateCreated.Year, post.DateCreated.Month, post.UrlSlug), post.Title, new { title = post.Title }))</li>
            }
        </ul>
    }
    else
    {
        <p>No posts found!</p>
    }
</div>
